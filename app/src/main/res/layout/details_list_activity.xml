<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/details_title_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <Button
            android:id="@+id/details_return_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/return_selector"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/details_title_ll"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="horizontal"
            android:background="@drawable/category_title_seek"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:src="@drawable/category_seek"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:text="搜索某宝商品/店铺"
                android:textSize="16sp"
                android:textColor="#bbbcbc"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/details_microphone_btn"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="7dp"
                android:src="@drawable/category_microphone"/>

        </LinearLayout>
        <CheckBox
            android:id="@+id/details_list_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:button="@null"
            android:background="@drawable/deatils_list_selector"
            android:layout_margin="12.5dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/details_title_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CBCBCB"
        android:layout_below="@+id/details_title_rl"/>
    <shop.bawei.com.moubao.view.myview.StickyNavLayout
        android:id="@+id/details_good_stikynavlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/details_title_view">
    <LinearLayout
        android:id="@+id/details_screen_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:id="@+id/details_screen_synthesizeprice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="综合"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/details_screen_sales"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="销量"
            android:textColor="@color/red"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/details_screen_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="价格"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/details_screen_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="筛选"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <RadioGroup
        android:id="@+id/details_good_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/details_screen_ll">
        <RadioButton
            android:id="@+id/details_good_radiobtn1"
            android:button="@null"
            android:text="年货节"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/red"
            android:layout_weight="1"
            android:background="@drawable/category_item_backgroud_checked"/>
        <RadioButton
            android:id="@+id/details_good_radiobtn2"
            android:button="@null"
            android:text="某宝配送"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/category_item_backgroud_checked"/>
        <RadioButton
            android:id="@+id/details_good_radiobtn3"
            android:button="@null"
            android:text="品牌"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/category_item_backgroud_checked"/>
        <RadioButton
            android:id="@+id/details_good_radiobtn4"
            android:button="@null"
            android:text="颜色"
            android:layout_margin="10dp"
            android:gravity="center"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/category_item_backgroud_checked"/>

    </RadioGroup>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/details_good_radiogroup"
        android:id="@+id/details_recyclerview"
        android:divider="#ffff0000"
        android:dividerHeight="1dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </shop.bawei.com.moubao.view.myview.StickyNavLayout>
    <Button
        android:id="@+id/details_good_up_btn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/details_toup_selector"

        />
    <TextView
        android:id="@+id/deatils_fruitless_tv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:text="暂无结果..."
        android:gravity="center"
        android:textSize="26sp"
        android:visibility="gone"/>
</RelativeLayout>