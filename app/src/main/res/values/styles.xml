<resources>

    <style name="Control" />
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextView.DialogTitle" parent="Control">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">@color/blackSub</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextView.DialogCancel" parent="Control">
        <item name="android:text">取消</item>
        <item name="android:padding">8dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:layout_marginRight">8dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_color_white_add</item>
    </style>

    <style name="TextView.DialogConfirm" parent="Control">
        <item name="android:text">确认</item>
        <item name="android:padding">8dip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/selector_color_white_add</item>
    </style>
    <style name="TextView.ItemAddressName" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">24dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/blackSub</item>
    </style>
    <style name="Layout.Item2" parent="Control">
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_color_white_add</item>
    </style>
    <style name="TextView.ItemAddressPhone" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:layout_height">24dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/greyAdd</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TextView.ItemAddressArea" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">24dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/greyAdd</item>
    </style>
    <style name="CheckBox.Setting" parent="Control">
        <item name="android:button">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@drawable/selector_color_white_add</item>
        <item name="android:drawableRight">@drawable/drawable_switch_common</item>
    </style>
    <style name="Layout.LinearHor" parent="Control">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="EditText.Address" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:hint">例如：上地街道软件园南站八维研修学院</item>
    </style>
    <style name="Spinner.Address" parent="Control">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:layout_width">fill_parent</item>
    </style>
    <style name="TextView.ItemHomeTitle" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">48dip</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:drawableLeft">@mipmap/ic_normal_title_left</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="TextView.DialogContent" parent="Control">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Layout.Dialog" parent="Control">
        <item name="android:padding">16dip</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
